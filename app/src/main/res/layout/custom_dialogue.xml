<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:gravity="center"
        android:textSize="@dimen/btn_txt_size"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will stop your app from running. you've come this far, are you sure you want to quit?"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="@dimen/btn_txt_size"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/positiveButton_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_finsih_btn"
            android:textSize="@dimen/btn_txt_size"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/negativeButton_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:gravity="center"
            android:layout_marginStart="20sp"
            android:textSize="@dimen/btn_txt_size"
            android:background="@drawable/ic_finsih_btn"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>