<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/ll_rc_history"
    android:orientation="horizontal"
    android:background="@drawable/recycler_view_bg">

    <TextView
        android:id="@+id/date_tv_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="date :  " />

    <TextView
        android:id="@+id/datetxt_tv_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/btn_txt_size"
        android:gravity="center"
        android:textColor="@color/black"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_assignment_turned_in_24"
        android:layout_gravity="center"
        android:background="@color/colorAssent"/>

</LinearLayout>